@model IEnumerable<ShoppingCar.Models.Product>
@{
    ViewBag.Title = "產品列表";
}

<div class="row" style="margin-top:20px;">
    @foreach (var m in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="~/images/@(m.Img).png" style="width:200px;height:250px;" />
                <div class="caption">
                    <h4>@m.Name</h4>
                    <p>單價:@m.Price</p>
                    <p>
                        <a href="@Url.Action("AddCar","Member")?PId=@m.PId"
                           class="btn btn-primary">加入購物車</a>
                    </p>

                </div>

            </div>

        </div>
    }
</div>
